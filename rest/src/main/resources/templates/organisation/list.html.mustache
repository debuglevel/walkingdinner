<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Organisations</title>
</head>
<body>

<div class="card">
    <div class="card-body">
        <ul id="organisations"></ul>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script>
(function() {
  var organisationAPI = ".";
  $.getJSON(organisationAPI)
    .done(function(data) {
      $.each(data, function(i, organisation) {
        var organisationDiv = $('<li/>', {
            id: 'organisation-'+i,
            class: 'organisation',
            title: 'Organisation, ID: '+organisation.id+', Name: '+organisation.name
        }).appendTo('#organisations');

        organisationDiv.append('<a href="'+organisation.id+'/">'+organisation.name+'</a>');
      });
    });
})();


</script>

</body>
</html>
